<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.oligoform.ameisernenband"
        versionCode = ""
        version     = "2.2" >

	<name>Am Eisernen Band</name>

	<description>Das Eiserne Band f&#252;hrt ausgehend von der Stadt Halle (Saale) auf den h&#246;chsten Berg Mitteldeutschlands, den Brocken. Es ist eine touristische Ausflugsverkehrsachse, die sieben historisch bedeutsame Eisenbahnstrecken mit unterschiedlichen Spurweiten verbindet.</description>

	<author href="https://oligoform.com/ameisernenband/" email="ameisernenband@oligoform.com">Oliver Bunke</author>

	<gap:platform name="ios" />
	<gap:platform name="android" />

	<!-- General preferences -->
	<preference name="android-targetSdkVersion" value="28" />
	<preference name="buildArchitecture" value="arm" />
	<preference name="android-build-tool" value="gradle" />

	<preference name="phonegap-version" value="cli-9.0.0" />
    <!-- <preference name="phonegap-version" value="cli-6.5.0" /> maybe statusbar works again? -->
	<preference name="permissions" value="none"/>

	<preference name="disallowOverscroll" value="true" />
	<preference name="webviewbounce" value="false" />

	<!-- Custom preferences -->
<preference name="StatusBarBackgroundColor" value="#821220" />
<preference name="StatusBarDefaultScrollToTop" value="true" />


	<!-- PhoneGap plugin declaration -->
	<plugin name="cordova-plugin-inappbrowser" source="npm" />
	<plugin name="cordova-plugin-network-information" source="npm" />
	<plugin name="cordova-plugin-whitelist" source="npm" />
	<plugin name="cordova-plugin-splashscreen" source="npm" />
	<plugin name="cordova-plugin-device" source="npm" />
	<plugin name="cordova-plugin-statusbar" source="npm" />
	<plugin name="cordova-build-architecture" spec="https://github.com/MBuchalik/cordova-build-architecture.git#v1.0.4" source="git" />
	<plugin name="cordova-plugin-geolocation" spec="~4.0.2" />
	<plugin name="cordova-plugin-vibration" spec="~3.1.1" />

	<!-- Whitelist policy  -->
<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

<edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
    <string>Bitte lassen Sie den Zugriff auf Ihren Standort zu, damit wir Ihnen Angebote in Ihrer Nähe zeigen können.</string>
</edit-config>

<edit-config target="NSLocationAlwaysUsageDescription" file="*-Info.plist" mode="merge">
    <string>Bitte lassen Sie den Zugriff auf Ihren Standort zu, damit wir Ihnen Angebote in Ihrer Nähe zeigen können.</string>
</edit-config>

