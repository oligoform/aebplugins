<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "ameisernenband"
        versionCode = ""
        version     = "1.4" >

	<name>Am Eisernen Band</name>

	<description>Das Eiserne Band f&#252;hrt ausgehend von der Stadt Halle (Saale) auf den h&#246;chsten Berg Mitteldeutschlands, den Brocken. Es ist eine touristische Ausflugsverkehrsachse, die sieben historisch bedeutsame Eisenbahnstrecken mit unterschiedlichen Spurweiten verbindet.</description>

	<author href="https://oligoform.com/ameisernenband/" email="ameisernenband-ios@oligoform.com">Oliver Bunke</author>

	<gap:platform name="ios" />
	<gap:platform name="android" />

	
	<!-- General preferences -->

	<preference name="phonegap-version" value="cli-9.0.0" />
	<preference name="permissions" value="none"/>

	<preference name="DisallowOverscroll" value="true" />
	<preference name="webviewbounce" value="false" />

<!-- Custom preferences -->
<edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
    <string>Bitte lassen Sie den Zugriff auf Ihren Standort zu, damit wir Ihnen Angebote in Ihrer Nähe zeigen können.</string>
</edit-config>

<gap:config-file platform="ios" parent="CFBundleDevelopmentRegion" mode="replace">  
        <array>  
            <string>en-US</string>  
        </array>  
    </gap:config-file>  
    <gap:config-file platform="ios" parent="CFBundleLocalizations" mode="replace">  
        <array>              
            <string>en</string>  
            <string>de</string>          
        </array>  
    </gap:config-file>  <!-- olg20190820-->

	<!-- PhoneGap plugin declaration -->
	<plugin name="cordova-plugin-inappbrowser" source="npm" />
	<plugin name="cordova-plugin-network-information" source="npm" />
	<plugin name="cordova-plugin-splashscreen" source="npm" />
	<plugin name="cordova-plugin-device" source="npm" />
	<plugin name="cordova-plugin-statusbar" source="npm" />
	<plugin name="cordova-plugin-geolocation" spec="~4.0.2" />

	<!-- SplashScreen configuration -->
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="FadeSplashScreenDuration" value="1000" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<gap:config-file platform="ios" parent="UIStatusBarHidden"><true/></gap:config-file>
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance"><false/></gap:config-file>

<!-- olg20190820-->
		<preference name="Fullscreen" value="true" /> 
	        <access origin="*" /> 

			<platform name="ios"> <preference name="StatusBarOverlaysWebView" value="true" /> </platform> 
			<preference name="StatusBarBackgroundColor" value="#821221" />
			<preference name="StatusBarStyle" value="blacktranslucent" />
			<preference name="StatusBarDefaultScrollToTop" value="true" />



			<!-- olg20190820-->

	<!-- Icons and Splashscreens declaration -->

	<icon src="icons/icon-60@3x.png" gap:platform="ios" width="180" height="180" />
